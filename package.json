{
  "name": "arabic-biology-quiz-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build --mode production",
    "build:fast": "vite build --mode production",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist",
    "build:perf": "NODE_ENV=production vite build --mode production --minify terser",
    "preview": "vite preview --host 0.0.0.0",
    "preview:prod": "NODE_ENV=production vite preview --host 0.0.0.0 --port 3000",
    "serve:static": "npx serve dist -s -l 3000",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "analyze": "npx vite-bundle-analyzer dist",
    "perf:audit": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:monitor": "node scripts/performance-monitor.js",
    "health": "node -e \"console.log('Health check endpoint not implemented - use browser console')\"",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deps:update": "npm update",
    "deps:check": "npx npm-check-updates",
    "clean": "rm -rf dist node_modules/.vite .cache",
    "clean:all": "rm -rf dist node_modules/.vite .cache && npm install",
    "precommit": "npm run typecheck && npm run lint",
    "ci": "npm run typecheck && npm run lint && npm run build:perf"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}